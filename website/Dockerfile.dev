# PUBLIC base image for development and community builds
FROM python:3.11-slim

WORKDIR /workspaces/ecosystem-core/app

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# Install OS-level dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY src/requirements.txt .# PUBLIC base image for development
FROM node:18-alpine

WORKDIR /workspaces/ecosystem-core/website

# Install dependencies
COPY package.json yarn.lock ./
RUN yarn install --frozen-lockfile

COPY . .

# Docusaurus runs on port 3000
EXPOSE 3000
RUN pip install --no-cache-dir -r requirements.txt

# Copy the app source code
COPY . .